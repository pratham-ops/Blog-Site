<%- include("./header.ejs") -%>

    <div class="container pt-5 pb-5">
        <h3>
            <%= post.title %>
        </h3>
        <hr>
        <img src=" <%= post.imageurl %>" class="card-img-top w-75 align-center" alt="..." height="350px">
        <hr>
        <div>
            <%= post.content %>
        </div>
        <hr>
        <p>
            Added on:
            <%= post.postDate %>
        </p>
        <div class="row">
            <div class="col-2">
                <form action="/delpost" method="post">
                    <input type="hidden" value="<%= post._id %>" name='pid'>
                    <button type="submit" class="btn btn-primary btm-sm"> Delete Article</button>
                </form>
            </div>
            <div class="col-3">
                <a href="/editpost/<%= post._id %>" class="btn btn-danger">Update Article</a>
            </div>
        </div>
    </div>

    <%-include("./footer.ejs") -%>